{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@asciidoc/*": ["src/asciidoc/*"],
      "@common/*": ["src/common/*"],
      "@components/*": ["src/components/*"],
      "@img/*": ["src/img/*"],
      "@layouts/*": ["src/layouts/*"],
      "@styles/*": ["src/styles/*"]
    }
  },
  "exclude": ["dist"]
}
